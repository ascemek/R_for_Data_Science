tidy_caos <- CAOSExam %>%
  pivot_longer(names_to = "TestType", 
               values_to = "TestScore", 
               cols = c("Pretest", "Posttest"))


tidy_caos %>% 
  pivot_wider(id_cols = Student, 
              names_from = TestType, 
              values_from = TestScore)
tidy_caos %>% 
  pivot_wider(names_from = TestType, 
              values_from = TestScore)


